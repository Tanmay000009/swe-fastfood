<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/css/stordstatc.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="/css/grid.css" />
    <title>Add Restaurant</title>
    <style>
      input,
      textarea {
        width: 12rem !important;
        max-width: 12rem;
        padding: 7px;
        border-radius: 3px;
        border: 1px solid #ccc;
        background-color: rgba(24, 49, 79, 0.06);
        font-size: 80%;
        margin: 1rem 0;
      }
      .heading {
        padding: 2rem;
      }
      button {
        color: white;
        margin: 1rem 0 3rem;
        box-shadow: 4px 4px 10px rgb(12 10 72 / 15%);
        text-align: center;
        width: 100%;
        border: 2px solid #b61010;
        background-color: #b61010;
        padding: 0.4rem 1rem;
      }
      section {
        padding: 50px 0;
      }
      .menu-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0;
      }
    </style>
  </head>
  <body>
    <% if (msg) { %>
    <script>
      alert("<%= msg %>");
    </script>
    <% } %>
    <section class="section-plans" style="padding: 20px 0">
      <div class="row heading">
        <h2 style="color: #b61010">ADD RESTAURANT</h2>
      </div>
    </section>
    <section class="section-plans menu-form">
      <form action="/restaurant" method="post">
        <label for="restaurantName">Restaurant Name</label> <br />
        <input
          id="restaurantName"
          type="text"
          class="validate"
          name="restaurantName"
          required
        /><br />
        <label for="email">Email</label> <br />
        <input
          id="email"
          type="email"
          class="validate"
          name="email"
          required
        /><br />
        <label for="phone">Phone</label> <br />
        <input
          id="restaurantPhone"
          type="text"
          class="validate"
          name="restaurantPhone"
          required
        /><br />
        <label for="restaurantAddress">Address</label><br />
        <textarea
          name="restaurantAddress"
          id="restaurantAddress"
          cols="20"
          rows="8"
          required
        ></textarea>
        <br />
        <br />
        <label for="restaurantZip">ZipCode</label> <br />
        <input
          id="restaurantZip"
          type="text"
          class="validate"
          name="restaurantZip"
          required
        />
        <input
          id="ownerId"
          type="hidden"
          name="ownerId"
          value="<%= ownerId %>"
          required
        />
        <br />
        <button type="submit">Add Restaurant</button>
      </form>
    </section>
  </body>
</html>
