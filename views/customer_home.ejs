<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Montserrat"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="/css/grid.css" />
    <title>Customer</title>
  </head>
  <body>
    <section class="section-plans">
      <div class="row">
        <div class="col span-10-of-12">
          <img
            src="/images/person.png"
            style="border-radius: 20%; width: 5vw"
          />
          <div style="display: inline-block; vertical-align: super">
            <%= customer.name%>
          </div>
        </div>
        <div class="col span-1-of-12">
          <a
            style="
              text-decoration: none;
              background-color: #b61010;
              padding: 10% 20%;
              color: white;
              vertical-align: text-bottom;
              margin-top: 20%;
              margin-bottom: 20%;
              box-shadow: 4px 4px 10px rgba(72, 39, 10, 0.15);
            "
            href="/customer/logout"
            >Logout</a
          >
        </div>
      </div>
    </section>
    <section class="section-cant" id="cities">
      <div class="row">
        <br /><br /><br />
        <h2>Restaurants</h2>
      </div>
      <% for(let i=0;i<restaurants.length;i+=2) {%>
        <div class="row">
            <div class="col span-1-of-2 cities-box">
              <img src="/images/canteenimg1.jpg" /><br /><br />
              <h3>
                <a
                  href="/restaurant/<%=restaurants[i].id%>"
                  class="cant"
                  style="
                    text-decoration: none;
                    border: 2px solid #b61010;
                    border-radius: 4px;
                    padding: 2px 4px;
                  "><%= restaurants[i].restaurantName %></a>
                  <br /><br />
                  <%= restaurants[i].restaurantAddress %>
              </h3>
            </div>
            <% if (i+1 < restaurants.length) {%>
               
            <div class="cols span-1-of-2 cities-box" style="float: left">
              <img src="/images/canteenimg2.jpg" /><br /><br />
              <h3>
                <a
                  href="canteen2.html"
                  class="cant"
                  style="
                    text-decoration: none;
                    border: 2px solid #b61010;
                    border-radius: 4px;
                    padding: 2px 4px;
                  "
                  ><%= restaurants[i+1].restaurantName %></a>
                  <br /><br />
                  <%= restaurants[i+1].restaurantAddress %>
              </h3>
            </div>
            <% } %>
          </div>
        <% } %>
      
    </section>
    <section class="section-plans">
      <div class="row">
        <h2>DASHBOARD</h2>
      </div>
      <div class="row">
        <a
          style="text-decoration: none; color: #b61010"
          href="<%- '/customer/current-orders?customerId=' + customer._id %>"
        >
          <div
            class="col span-5-of-11"
            style="
              box-shadow: 4px 4px 10px rgba(72, 39, 10, 0.15);
              text-align: center;
              padding: 1%;
              border: 2px solid #b61010;
            "
          >
            CURRENT ORDER
          </div>
        </a>
        <div class="col" style="padding: 0 3vw"></div>
        <a
          style="text-decoration: none; color: white"
          href="<%- '/customer/order-history?customerId=' + customer._id %>"
        >
          <div
            class="col span-5-of-11"
            style="
              box-shadow: 4px 4px 10px rgba(72, 39, 10, 0.15);
              text-align: center;
              padding: 1%;
              border: 2px solid #b61010;
              background-color: #b61010;
            "
          >
            ORDER HISTORY
          </div>
        </a>
      </div>
     
    </section>
  </body>
</html>
